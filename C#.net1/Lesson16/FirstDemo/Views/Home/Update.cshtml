@model FirstDemo.Majors.MajorViewModel

@{
    ViewData["Title"] = "Update";
    var select = (List<SelectionItem>)ViewBag.Select;
}

<h1>Update</h1>

<h4>UpdateMajorViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Home/Update" method="post">

            <div class="form-group">
                <label class="control-label">Id</label>
                <input readonly name="Id" value="@Model.Id" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Major Name</label>
                <input name="MajorName" value="@Model.MajorName" class="form-control" />

            </div>
            <div class="form-group">
                <select name="Status">
                    @foreach (var item in select)
                    {
                        @if ((int)Model.Status == item.Value)
                        {
                            <option selected value="@item.Value">@item.DisplayName</option>

                        }
                        else
                        {
                            <option value="@item.Value">@item.DisplayName</option>
                        }
                        
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a>Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
