@model FirstDemo.Majors.MajorViewModel

@{
    ViewData["Title"] = "Delete";
    var select = (List<SelectionItem>)ViewBag.Select;
}

<h1>Delete</h1>

<h4>Major</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this major?</h4>
    <div>
        <h4>Major ID: @Model.Id</h4>
        <h4>Major Name: @Model.MajorName</h4>
    </div>
    <form action="/Home/DeleteConfirmed" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

